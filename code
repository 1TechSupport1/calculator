from ui1 import num1,num2,symbol
##importing_values_from_ui1.py

a = int(num1)
b = int(num2)
##turning_them_into_integers

if (symbol=='+'):
    ans = (a + b)

if (symbol=='-'):
    ans = (a - b)

##checking_the_operation_entered_by_the_user

if (symbol=='*'):
    ans = (a * b)

if (symbol=='/'):
    ans = (a / b)

print("   ")
print("             ", ans)


