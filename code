from time import sleep


##all_the_blank_print_statments_and_space_is_for_esthetics_only

print("                     Calculator                   ")
d = input("Input_your_first_number: ")
print("   ")
sleep(.02)
e = input("Input_your_operation: ")
print("   ")
sleep(.02)
f = input("Input_your_second_number: ")

if (d==''):
    if (e==''):
        if (f==''):
            print("PLEASE_ENTER_A_NUMBER")
##checking_if_the_input_is_blank
else:
    num1 = d
    symbol = e
    num2 = f
